@using MonitoraggioPAC25_27.Utilities
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Monitoraggio Rete PAC</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
</head>
<body class="@Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT")">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-secondary shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Monitoraggio Rete PAC</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarContent">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link active text-white" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            @if (User.IsInRole("segretariato"))
                            {

                            }
                            @if (User.IsInRole("responsabile scheda"))
                            {
                            }

                            @if (User.IsInRole("referente ministero"))
                            {
                            }

                            @if (User.IsInRole("responsabile progetto"))
                            {
                            }

                            @if (User.IsInRole("administrator"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Schede" asp-action="ElencoSchede">Gestione Schede</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Progetti" asp-action="ElencoProgetti">Gestione Progetti</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Output" asp-action="ElencoOutput">Gestione Output</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="AdminEmail" asp-action="SendOne">Email</a>
                                </li>
                            }
                        </ul>
                    }
                    <div class="ms-auto">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>


    <div class="container-fluid body-container">
        <main role="main" class="pb-3" style="padding-top:25px;">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container-fluid">
            <div class="py-2 d-flex flex-column flex-md-row justify-content-between align-items-center">
                <div class="text-center text-md-left mb-2 mb-md-0">
@*                     &copy; 2025 - RRN 25-27 Versione @AppVersion.Get() *@
                    &copy; 2025 - RRN 25-27 Versione @AppVersion.GetWithCommitDate()
                </div>
                <div class="d-flex justify-content-center align-items-center flex-wrap gap-3">
                    <img src="~/images/logo-retepac_verticale_trasparente_web.png" class="img-thumbnail" style="max-height: 60px; height: auto; width: auto;" />
                    <img src="~/images/mipaaft.png" class="img-thumbnail" style="max-height: 60px; height: auto; width: auto;" />
                    <img src="~/images/it_fundedbyeu_vertical_rgb_pos.png" class="img-thumbnail" style="max-height: 60px; height: auto; width: auto;" />
                    <img src="~/images/psp_trasparente_piccolo.png" class="img-thumbnail" style="max-height: 60px; height: auto; width: auto;" />
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
