@using Microsoft.AspNetCore.Identity
@model List<IdentityUser>

<h2>Invio Email agli Utenti</h2>

<form asp-action="InviaEmail" method="post">

    <div class="mb-3">
        <label>Oggetto</label>
        <input name="subject" class="form-control" required />
    </div>

    <div class="mb-3">
        <label>Messaggio</label>
        <textarea name="message" class="form-control" rows="5" required></textarea>
    </div>

    <h4>Utenti</h4>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Select</th>
                <th>Email</th>
                <th>UserName</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="selectedUsers" value="@u.Id" />
                    </td>
                    <td>@u.Email</td>
                    <td>@u.UserName</td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Invia Email</button>

</form>
