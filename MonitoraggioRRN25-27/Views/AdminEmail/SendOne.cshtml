@model AdminEmailSendOneViewModel

<div class="row">
    <div class="col-md-6">
        <h4>Invio email singola</h4>

        <form method="post">
            <div class="mb-3">
                <label class="form-label">Destinatario</label>
                <input type="email" class="form-control" asp-for="Destinatario" />
                <span asp-validation-for="Destinatario" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Oggetto</label>
                <input type="text" class="form-control" asp-for="Oggetto" />
            </div>

            <div class="mb-3">
                <label class="form-label">Messaggio</label>
                <textarea asp-for="MessaggioHtml" rows="8" class="form-control"></textarea>
            </div>

            <button class="btn btn-primary">Invia Email</button>
        </form>
    </div>

    <div class="col-md-6">
        <h4>Log ultimi invii</h4>
        <table class="table table-sm table-striped">
            <thead>
                <tr>
                    <th>Data</th>
                    <th>Email</th>
                    <th>Oggetto</th>
                    <th>Messaggio</th>
                    <th>Esito</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var log in Model.Log)
                {
                    <tr>
                        <td>@log.DataInvio</td>
                        <td>@log.Email</td>
                        <td>@log.Oggetto</td>
                        <td style="white-space:pre-line">@log.Messaggio</td>
                        <td>@log.Esito</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
